<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="16dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="State:"
        app:layout_constraintBottom_toBottomOf="@+id/button_state"
        app:layout_constraintStart_toEndOf="@+id/button_state"
        app:layout_constraintTop_toTopOf="@+id/button_state"
        app:layout_constraintVertical_bias="0.379" />

    <Button
        android:id="@+id/button_getBalance"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="getBalance"
        android:textColor="#000000"
        app:backgroundTint="#355F7D"
        app:layout_constraintEnd_toEndOf="@+id/button_balanceReceived"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_balanceReceived"
        app:layout_constraintTop_toBottomOf="@+id/button_balanceReceived" />

    <Button
        android:id="@+id/button_gethdgethd"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="gethd"
        android:textColor="#000000"
        app:backgroundTint="#355F7D"
        app:layout_constraintEnd_toEndOf="@+id/button_getBalance"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_getBalance"
        app:layout_constraintTop_toBottomOf="@+id/button_getBalance" />

    <Button
        android:id="@+id/button_state"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="state"
        android:textColor="#000000"
        app:backgroundTint="#355F7D"
        app:layout_constraintEnd_toEndOf="@+id/button_seller"
        app:layout_constraintStart_toStartOf="@+id/button_seller"
        app:layout_constraintTop_toBottomOf="@+id/button_seller" />

    <Button
        android:id="@+id/button_abort"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="abort "
        android:textColor="#000000"
        app:backgroundTint="#C97539"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_withdrawMoney"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="withdrawMoney"
        android:textColor="#000000"
        app:backgroundTint="#C97539"
        app:layout_constraintEnd_toEndOf="@+id/button_purchase"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_purchase"
        app:layout_constraintTop_toBottomOf="@+id/button_purchase" />

    <Button
        android:id="@+id/button_purchase"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="purchase"
        android:textColor="#000000"
        app:backgroundTint="#B84040"
        app:layout_constraintEnd_toEndOf="@+id/button_abort"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_abort"
        app:layout_constraintTop_toBottomOf="@+id/button_abort" />

    <Button
        android:id="@+id/button_seller"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="seller"
        android:textColor="#000000"
        app:backgroundTint="#355F7D"
        app:layout_constraintEnd_toEndOf="@+id/button_gethdgethd"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_gethdgethd"
        app:layout_constraintTop_toBottomOf="@+id/button_gethdgethd" />

    <Button
        android:id="@+id/button_balanceReceived"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="balanceReceived"
        android:textColor="#000000"
        app:backgroundTint="#355F7D"
        app:layout_constraintEnd_toEndOf="@+id/button_withdrawMoney"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_withdrawMoney"
        app:layout_constraintTop_toBottomOf="@+id/button_withdrawMoney" />

    <Button
        android:id="@+id/button_editDescription"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="48dp"
        android:text="editDescription"
        android:textColor="#000000"
        app:backgroundTint="#C97539"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_state"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button_state"
        app:layout_constraintTop_toBottomOf="@+id/button_state"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="B. Received:"
        app:layout_constraintBottom_toBottomOf="@+id/button_balanceReceived"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button_balanceReceived"
        app:layout_constraintTop_toTopOf="@+id/button_balanceReceived"
        app:layout_constraintVertical_bias="0.413" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="G.Balance:"
        app:layout_constraintBottom_toBottomOf="@+id/button_getBalance"
        app:layout_constraintStart_toEndOf="@+id/button_getBalance"
        app:layout_constraintTop_toTopOf="@+id/button_getBalance"
        app:layout_constraintVertical_bias="0.379" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="gethd:"
        app:layout_constraintBottom_toBottomOf="@+id/button_gethdgethd"
        app:layout_constraintStart_toEndOf="@+id/button_gethdgethd"
        app:layout_constraintTop_toTopOf="@+id/button_gethdgethd"
        app:layout_constraintVertical_bias="0.413" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Seller:"
        app:layout_constraintBottom_toBottomOf="@+id/button_seller"
        app:layout_constraintStart_toEndOf="@+id/button_seller"
        app:layout_constraintTop_toTopOf="@+id/button_seller"
        app:layout_constraintVertical_bias="0.448" /><![CDATA[


            />


  ]]>
  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


